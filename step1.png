<svg width="250" height="200" viewBox="0 0 250 200" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="step1Gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4f46e5;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:0.1" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="250" height="200" rx="12" fill="url(#step1Gradient)" stroke="#4f46e5" stroke-width="2" stroke-dasharray="5,5"/>
  
  <!-- 手机轮廓 -->
  <rect x="80" y="30" width="90" height="140" rx="15" fill="#1f2937" stroke="#374151" stroke-width="2"/>
  
  <!-- 屏幕 -->
  <rect x="90" y="45" width="70" height="110" rx="8" fill="#000"/>
  
  <!-- 相机界面 -->
  <rect x="95" y="50" width="60" height="45" rx="4" fill="#4f46e5"/>
  <text x="125" y="70" font-family="Arial, sans-serif" font-size="8" fill="white" text-anchor="middle">相机</text>
  <text x="125" y="80" font-family="Arial, sans-serif" font-size="8" fill="white" text-anchor="middle">预览</text>
  
  <!-- 拍照按钮 -->
  <circle cx="125" cy="130" r="15" fill="white" stroke="#e5e7eb" stroke-width="2"/>
  <circle cx="125" cy="130" r="10" fill="#4f46e5"/>
  
  <!-- 食物图标 -->
  <g transform="translate(30, 80)">
    <circle cx="0" cy="0" r="25" fill="#fbbf24"/>
    <circle cx="-8" cy="-8" r="8" fill="#f59e0b"/>
    <circle cx="8" cy="-5" r="6" fill="#d97706"/>
    <circle cx="0" cy="10" r="10" fill="#92400e"/>
  </g>
  
  <!-- 箭头 -->
  <path d="M65 100 L75 100" stroke="#4f46e5" stroke-width="3" marker-end="url(#arrowhead)"/>
  
  <!-- 箭头标记 -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#4f46e5"/>
    </marker>
  </defs>
  
  <!-- 文字说明 -->
  <text x="125" y="185" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#1f2937" text-anchor="middle">拍摄食物照片</text>
</svg>